---
import SunIcon from "../icons/SunIcon.astro";
import WaveIcon from "../icons/WaveIcon.astro";
import CollaborateIcon from "../icons/CollaborateIcon.astro";
---

<style>
  .container {
    padding: 2.5rem 0.75rem;
  }

  @media (min-width: 48rem) {
    .container {
      padding: 2.5rem 1.25rem;
    }
  }

  @media (min-width: 64rem) {
    .container {
      padding: 2.5rem;
    }
  }

  .wrapper {
    border: 2px solid var(--color-green-400);
    border-radius: var(--rounded-sm);
  }

  .wrapper-title {
    padding: 0.5rem;
    border-bottom: 2px solid var(--color-green-400);
  }

  .wrapper-title h2 {
    font-weight: 700;
  }

  .blank {
    height: 0.625rem;
    border-bottom: 2px solid var(--color-green-400);
  }

  .decoration {
    background-color: var(--color-green-400);
    height: 364px;
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .decoration svg {
    position: absolute;
    inset: -0.5rem;
    width: 150%;
    height: 150%;
    top: -25%;
    left: -25%;
  }

  @media (min-width: 48rem) {
    .decoration svg {
      width: 160%;
      height: 160%;
      top: -30%;
      left: -30%;
    }
  }

  @media (min-width: 64rem) {
    .decoration {
      height: auto;
      width: calc(1 / 3 * 100%);
    }

    .decoration svg {
      width: 140%;
      height: 140%;
      top: -20%;
      left: -20%;
    }
  }

  .approach {
    padding: 1rem 1.25rem 1.25rem 1.25rem;
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 48rem) {
    .approach {
      padding: 1rem 1.25rem 1.5rem 1.25rem;
      flex: 1 0 0;
    }
  }

  .approach:not(:last-child) {
    border-bottom: 2px solid var(--color-green-400);
  }

  @media (min-width: 48rem) {
    .approach:not(:last-child) {
      border-right: 2px solid var(--color-green-400);
      border-bottom: 0;
    }
  }

  .approach-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .approach-content h3 {
    font-weight: 700;
  }

  .wrapper-approche {
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 48rem) {
    .wrapper-approche {
      flex-direction: row;
    }
  }

  @media (min-width: 64rem) {
    .wrapper-approche {
      width: calc(2 / 3 * 100%);
    }
  }

  .wrapper-content {
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 64rem) {
    .wrapper-content {
      flex-direction: row;
    }
  }
</style>

